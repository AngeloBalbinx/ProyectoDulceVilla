package hilos;

import vista.FrmPreLoader;

public class HiloBarraProgreso extends Thread{
@Override
public void run() {
	for (int i = 0; i <= 100; i++) {
		FrmPreLoader.prbCarga.setValue(i);
		// pausa
		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			System.out.println("Error en el hilo");
		}
}
	
}
}

