	/**
	 * Create the frame.
	 */
	public Logueo() {
		setTitle("DulceVilla - Acceso al Sistema");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 489, 295);
		contentPane = new JPanel();
