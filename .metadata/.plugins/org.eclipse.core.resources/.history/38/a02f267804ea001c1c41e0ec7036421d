	public void actionPerformed(ActionEvent arg0) {
		if (arg0.getSource() == btnIngresar) {
			actionPerformedBtnIngresar(arg0);
		}
	}
	protected void actionPerformedBtnIngresar(ActionEvent arg0) {
		ValidarAcceso();
	}

	private void ValidarAcceso() {
		String user,clave;
		// Obtener los datos ingresados en la GUI
		user = getUsuario();
		clave = getClave();
		// Validación para que se ingresen los datos
		if(user ==null || clave == null){
			return;
		}else{// si ingresaron el user y la contraseña
			// llamar al proceso de validación
			usuario= gUser.ValidarAcceso(user, clave);
			// validar el resultado del proceso
			if(usuario == null){
				mensajeError("Usuario y/o passowrd incorrectos")
			}
			
		}
		
	}

	private void mensajeError(String msj) {
		JOptionPane.showMessageDialog(this, msj, "Error!", 0);
		
	}

	private String getClave() {
		// TODO Auto-generated method stub
		return null;
	}

	private String getUsuario() {
		// TODO Auto-generated method stub
		return null;
	}
}
